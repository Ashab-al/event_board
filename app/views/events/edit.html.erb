<%= render partial: "partials/form_errors", locals: { model: @event } %>

<%= form_for(@event, html: { multipart: true, class: "w-full text-indigo-200 body-font p-5 bg-indigo-900"}) do |f| %>
  <div class="mx-auto flex px-5 md:flex-row flex-col jobcard">
    <div
      class="lg:flex-grow md:w-1/2 lg:pr-24 md:pr-16 flex flex-col md:items-start md:text-left mb-16 md:mb-0 items-center">

      <figure class="visible">
        <div class="">
          <div class="pt-5 px-2 sm:px-6">
            <span
              class="select_container inline-flex items-center py-1 px-2 rounded-full bg-green-600 text-gray text-xs font-bold tracking-widest mb-2">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
              <%= f.datetime_select :datetime, class: 'w-full' %>
            </span>
            <%= f.text_field :title, class: 'w-full bg-transparent title-font sm:text-4xl text-3xl mb-1 font-medium text-white' %>
            <%= f.text_field :address, class: 'mb-4 bg-transparent flex text-white' %>
            <%= f.text_area :description, class: 'mb-2 w-full bg-transparent text-indigo-200 text-white text-base pb-6' %>
            
            <%= f.submit t('event.edit_save_button'), class: 'transition cursor-pointer duration-300 text-center mt-4 bg-green-500 hover:bg-green-400 text-white font-bold py-2 px-4 border-b-4 border-green-700 hover:border-green-500 rounded' %>
          </div>
        </div>
      </figure>

    </div>
    <div class="lg:max-w-lg lg:w-full md:w-1/2 w-5/6 sm:block hidden">
      <img class="object-cover object-center rounded" alt="hero" src="<%= asset_path('event.jpg') %>" />
    </div>
  </div>
<% end %>

<style>
  .select_container select {
    border-radius: 9999px;
    padding: 0;
    width: 60px;
    height: 40px;
    font-size: 12px;
    color: black !important
  }

  @media screen and (max-width: 400px){
    .select_container select {
      font-size: 10px;
      width: 40px
    }
  } 
</style>