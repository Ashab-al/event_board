<div class="container rounded shadow-lg">
  <div class="px-12 py-6">
    <div class="text-center">
      <h1 class="font-normal text-3xl text-grey-darkest leading-loose my-3 w-full">Type pincode</h1>
      <div class="w-full text-center">
        <%= form_tag('', method: 'post') do |f| %>
          <div class="max-w-sm mx-auto p-1 pr-0 flex items-center">
            <%= password_field_tag :pincode, params[:pincode], class: 'flex-1 appearance-none rounded shadow p-3 text-grey-dark mr-2 focus:outline-none' %>
            <%= submit_tag 'Send', class: 'appearance-none bg-indigo text-black text-base font-semibold tracking-wide uppercase p-3 rounded shadow hover:bg-indigo-light' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
