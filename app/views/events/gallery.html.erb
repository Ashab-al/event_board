<section class="mt-4 overflow-hidden text-gray-700 ">
    <div class="flex flex-wrap -m-1 md:-m-2">
      <% @pictures.each do |picture| %>
        <div class="flex flex-wrap md:w-1/2 lg:w-1/4">
          <div class="w-full p-1 md:p-2">
            <%= image_tag picture, class: 'block object-cover object-center w-full h-full rounded-lg' %>
          </div>
        </div>
      <% end %>
    </div>
    <%= link_to 'Back to event', @event, class: 'block w-40 mx-auto transition cursor-pointer duration-300 text-center mt-2 bg-indigo-500 hover:bg-indigo-400 text-white font-bold py-2 px-4 border-b-4 border-indigo-700 hover:border-indigo-500 rounded' %>
</section>
