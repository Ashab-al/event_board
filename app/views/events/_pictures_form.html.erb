<%= form_for(:post, url: event_add_pictures_path(event), html: { class: "mt-10"}) do |f| %>
  <div class="mb-6">
    <%= f.label :pictures, class: 'block mb-2 text-sm font-medium text-white-900 dark:text-white-300' %>
    <%= f.file_field :pictures, multiple: true, class: 'shadow-sm bg-white-50 border border-white-300 text-white-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-white-700 dark:border-white-600 dark:placeholder-white-400 dark:text-gray dark:focus:ring-blue-500 dark:focus:border-blue-500 dark:shadow-sm-light' %>
  </div>

  <%= f.submit 'Add pictures', class: "transition cursor-pointer duration-300 text-center mt-2 bg-indigo-500 hover:bg-indigo-400 text-white font-bold py-2 px-4 border-b-4 border-indigo-700 hover:border-indigo-500 rounded" %>
<% end %>
