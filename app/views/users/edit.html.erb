  <%= render partial: "partials/form_errors", locals: { model: @user } %>

<%= form_for(@user, html: { multipart: true, class: 'items-start max-w-6xl flex h-auto lg:h-screen flex-wrap mx-auto lg:my-4' }) do |f| %>
    <div id="profile" class="mt-20 lg:mt-0 w-full lg:w-3/5 rounded-lg lg:rounded-l-lg lg:rounded-r-none shadow-2xl bg-white opacity-75 mx-6 lg:mx-0">
      <div class="p-4 md:p-12 text-center lg:text-left">
        <div class="block lg:hidden rounded-full shadow-xl mx-auto -mt-16 h-48 w-48 bg-cover bg-center" style="background-image: url(<%= asset_path('user.jpg') %>)"></div>
        <%= f.text_field :name, class: 'w-full max-w-xl text-3xl font-bold p-0 lg:pt-0 border' %>          
        <div class="mx-auto lg:mx-0 w-4/5 pt-3 border-b-2 border-indigo-500 opacity-25"></div>
        <%= f.email_field :email, class: 'w-full p-0 my-4 text-base font-bold flex items-center justify-center lg:justify-start border' %>
        <%= f.text_area :about, placeholder: :about, class: 'w-full p-0 text-sm border', rows: 3 %>

        <div class="pt-12 pb-8">
          <%= f.submit 'Save changes', class: 'transition cursor-pointer duration-300 text-center mt-4 bg-indigo-500 hover:bg-indigo-400 text-white font-bold py-2 px-4 border-b-4 border-indigo-700 hover:border-indigo-500 rounded' %>
        </div>
      </div>
    </div>
    <div class="w-full lg:w-2/5">
      <img src="<%= asset_path('user.jpg') %>" class="rounded-none lg:rounded-lg shadow-2xl hidden lg:block">
    </div>
<% end %>